  <body>
    <header class="bg-primary">
      <div class="md:container">
        <div class="flex flex-col items-center md:flex-row md:justify-between">
          <h1 class="py-1">
            <a href="/" class="block w-20 h-[72px] bg-[url('../images/logo-white.png')] bg-contain bg-center bg-no-repeat indent-[101%] overflow-hidden whitespace-nowrap">
              可麗恩眼鏡
            </a>
          </h1>
          <nav class="w-full md:w-auto">
            <ul class="flex flex-wrap text-center text-white">
              <li class="w-1/2 md:w-auto"><a href="#" class="block md:text-xl border border-white md:border-0 py-3 md:py-[25px] md:px-8 hover:bg-primary-light">系列鏡框</a></li>
              <li class="w-1/2 md:w-auto"><a href="#" class="block md:text-xl border border-white md:border-0 py-3 md:py-[25px] md:px-8 hover:bg-primary-light">門市據點</a></li>
              <li class="w-1/2 md:w-auto"><a href="#" class="block md:text-xl border border-white md:border-0 py-3 md:py-[25px] md:px-8 hover:bg-primary-light">部落格</a></li>
              <li class="w-1/2 md:w-auto"><a href="#" class="block md:text-xl border border-white md:border-0 py-3 md:py-[25px] md:px-8 hover:bg-primary-light">常見問題</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <%- contents %>
    </main>

    <footer class="bg-primary text-white">
      <div class="container">
        <div class="flex flex-wrap justify-between border-b border-white py-6 md:items-center md:gap-y-6 md:pt-12 md:pb-8">
          <nav class="hidden md:block">
            <ul class="flex gap-12">
              <li><a href="#">首頁</a></li>
              <li><a href="#">系列鏡框</a></li>
              <li><a href="#">門市據點</a></li>
              <li><a href="#">部落格</a></li>
              <li><a href="#">常見問題</a></li>
            </ul>
          </nav>
          <ul class="flex gap-2 md:gap-4 lg:gap-8">
            <li><a href="#"><img class="w-6 md:w-10 lg:w-12" src="./assets/images/ic-social-fb.png" alt="facebook" title="facebook"></a></li>
            <li><a href="#"><img class="w-6 md:w-10 lg:w-12" src="./assets/images/ic_social_ig.png" alt="instagram" title="instagram"></a></li>
            <li><a href="#"><img class="w-6 md:w-10 lg:w-12" src="./assets/images/ic_social_line.png" alt="line" title="line"></a></li>
          </ul>
          <ul class="order-first md:order-none md:w-full">
            <li class="flex items-center gap-2 mb-2">
              <span class="material-symbols-outlined md:text-5xl">call</span>
              <a class="md:text-4xl" href="tel:+0800-000-000">0800-000-000</a>
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined md:text-5xl">mail</span>
              <a class="md:text-4xl" href="mailto:glasses@business.com">glasses@business.com</a>
            </li>
          </ul>
        </div>
        <div class="py-4 md:py-8 md:flex md:justify-between">
          <p class="mb-2 md:mb-0">Copyright © 2020 Glasses.All rights reserved.</p>
          <div class="flex flex-col items-start md:flex-row md:gap-12">
            <a href="#" class="mb-2 md:mb-0">隱私權政策</a>
            <a href="#">服務條款</a>
          </div>
        </div>
      </div>
    </footer>
    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>
